@model PagedList.PagedList<StudentViewModel>

@{
    ViewBag.Title = "Students";
}

@if (User.IsInRole(Constants.AdminRole))
{
    <p>
        @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-default" })
    </p>
}

@using(Html.BeginForm("Index", "Students", FormMethod.Get))
{
    <div class="form-group">
        @Html.TextBox("query", "", new { @class = "form-control col-md-4" })
        <input type="submit" class="btn btn-default" value="Search"/>
    </div>
}

<table class="table">
    <tr>
        <th>
            @Html.ActionLink("First name", "Index", new { page = Model.PageNumber, query = (string)ViewData["query"], order = (int)OrderType.ByFirstName })
        </th>
        <th>
            @Html.ActionLink("Last name", "Index", new { page = Model.PageNumber, query = (string)ViewData["query"], order = (int)OrderType.ByLastName })
        </th>
        <th>
            @Html.Display("Date")
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstMidName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EnrollmentDate)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.StudentID }, new { @class = "btn btn-default" })
            </td>
        </tr>
    }

</table>

<div class="text-center">
    @Html.PagedListPager(Model, page => Url.Action("Index", "Students", 
        new { page, query = (string)ViewData["query"], order = (int)ViewData["order"] }))
</div>
